{
  "name": "@qnpm/ykit",
  "version": "0.3.2-rc0",
  "description": "高可用高扩展前端开发工具",
  "main": "src/ykit.js",
  "bin": {
    "ykit": "bin/ykit"
  },
  "engines": {
    "node": ">=0.12"
  },
  "scripts": {
    "test": "mocha --recursive --timeout 0",
    "start": "cd .. && sudo node ykit/bin/ykit server",
    "doc": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && ydoc build && node tasks/post-process-doc.js",
    "release": "tasks/release.sh"
  },
  "license": "MIT",
  "dependencies": {
    "async": "^1.5.2",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "chalk": "^1.1.3",
    "cli-cursor": "^1.0.2",
    "cli-spinners": "^0.3.0",
    "colors": "^1.1.2",
    "compute-cluster": "0.0.9",
    "connect": "^3.4.1",
    "css-loader": "^0.23.1",
    "eslint": "2.13.1",
    "extend": "^3.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-extra": "^1.0.0",
    "globby": "^5.0.0",
    "html-loader": "^0.4.3",
    "jerryproxy": "1.0.91",
    "js-yaml": "^3.6.1",
    "json-loader": "^0.5.4",
    "json5": "^0.5.0",
    "left-pad": "^1.1.3",
    "loader-utils": "^0.2.15",
    "log-symbols": "^1.0.2",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "optimist": "^0.6.1",
    "replacestream": "^4.0.0",
    "require-uncached": "^1.0.2",
    "requireg": "^0.1.5",
    "right-pad": "^1.0.1",
    "semver": "^5.3.0",
    "serve-index": "^1.8.0",
    "serve-static": "^1.11.1",
    "shelljs": "^0.7.5",
    "style-loader": "^0.13.1",
    "through2": "^2.0.1",
    "uglify-js": "2.7.5",
    "uglifycss": "0.0.25",
    "webpack": "1.14.0",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "^2.17.0"
  },
  "repository": {
    "type": "http",
    "url": "http://gitlab.corp.qunar.com/mfe/ykit.git"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "conventional-changelog-cli": "^1.2.0",
    "debug": "^2.6.0",
    "findup": "^0.1.5",
    "ghooks": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-watch": "^4.3.8",
    "mocha": "^3.1.2",
    "ps-tree": "^1.1.0",
    "semver-regex": "^1.0.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "eslint ./src",
      "commit-msg": "node ./tasks/validate-commit-msg.js"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  }
}
